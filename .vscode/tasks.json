{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RN menu",
            "command": "$ANDROID_HOME/platform-tools/adb shell input keyevent 82",
            "type": "shell",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "RN reload",
            "command": "$ANDROID_HOME/platform-tools/adb shell input text \"RR\"",
            "type": "shell",
            "presentation": {
                "reveal": "never"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "test",
            "command": "dotnet test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/test"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "fable",
            "command": "yarn cold-start",
            "type": "shell",
            "group": "build",
            "presentation": { "reveal": "always" },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "fable - DEPRECATED",
            "command": "dotnet fable npm-build",
            "type": "shell",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/src"
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        }
    ]
}