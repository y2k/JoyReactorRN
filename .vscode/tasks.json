{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run all",
            "dependsOrder": "parallel",
            "dependsOn": [
                "run web-cli",
                "fable"
            ],
            "problemMatcher": []
        },
        {
            "label": "run web-cli",
            "command": "dotnet run",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/web-cli"
            },
            "dependsOn": "build"
        },
        {
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "test",
            "command": "dotnet test",
            "type": "shell",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/test"
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "fable",
            "command": "yarn && yarn start",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "options": {
                "cwd": "${workspaceRoot}/web"
            },
            "dependsOn": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}